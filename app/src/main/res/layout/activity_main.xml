<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.torpe.followyou.MainActivity">

    <Button
        android:id="@+id/btnGetData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toBottomOf="@+id/timerLabel" />

    <TextView
        android:id="@+id/lattitudeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/lattitudeLabel"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/longitudeTextView" />

    <TextView
        android:id="@+id/longitudeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteY="16dp"
        app:layout_constraintLeft_toRightOf="@+id/longitudeLabel"
        android:layout_marginLeft="109dp" />

    <TextView
        android:id="@+id/longitudeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Longitude :"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/lattitudeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lattitude :"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/longitudeLabel" />

    <TextView
        android:id="@+id/timerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LastTrack :"
        tools:layout_editor_absoluteX="16dp"
        android:layout_marginTop="47dp"
        app:layout_constraintTop_toBottomOf="@+id/lattitudeLabel" />

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/lattitudeTextView"
        app:layout_constraintLeft_toRightOf="@+id/timerLabel"
        android:layout_marginLeft="108dp" />

    <TextView
        android:id="@+id/intervallumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/timerTextView"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="120dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Intervallum"
        app:layout_constraintTop_toBottomOf="@+id/timerLabel"
        tools:layout_editor_absoluteX="16dp" />

</android.support.constraint.ConstraintLayout>
